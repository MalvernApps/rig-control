<Window x:Class="serialtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:serialtest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="closing">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Width="120" Height="20">14.5000</TextBlock>
            <Button Width="120" Height="20" Click="Connect">Connect</Button>
            <Button Width="120" Height="20" Click="SendData">Send</Button>
            <Button Width="120" Height="20" Click="SendFreq">Send Freq</Button>
        </StackPanel>
    </Grid>
</Window>
